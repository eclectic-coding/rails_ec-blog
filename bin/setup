#!/usr/bin/env ruby
require "fileutils"

# path to your application root.
APP_ROOT = File.expand_path("..", __dir__)

def system!(*args)
  system(*args, exception: true)
end

def command_available?(command)
  system("command -v #{command} >/dev/null 2>&1")
end

FileUtils.chdir APP_ROOT do
  # This script is a way to set up or update your development environment automatically.
  # This script is idempotent, so that you can run it at any time and get an expectable outcome.
  # Add necessary setup steps to this file.

  # Install system dependencies if Homebrew is installed
  if command_available?("brew")
    # Older/newer versions of brew-bundle may not support --no-lock/--no-upgrade flags.
    # Use a conservative check/install which works across environments.
    system("brew bundle check") || system!("brew bundle install")
  end

  puts "== Installing dependencies =="
  system! "gem install bundler --conservative"
  system("bundle check") || system!("bundle install")

  # Install foreman system wide
  system! "gem install foreman"

  # Skip JS/Yarn steps when no package.json is present to make bin/setup safe for CI
  # Only run JS steps if this project has a package.json
  if File.exist?(File.join(APP_ROOT, "package.json"))
    system! "npm install -g yarn" unless command_available?("yarn")
    system("bin/yarn") || warn("bin/yarn failed â€” ensure Yarn is installed or package.json is valid")

    puts "\n== Compiling CSS & JS =="
    system! "bin/yarn run build"
    system! "bin/yarn run build:css"
  else
    puts "\n== Skipping JS steps: no package.json found =="
  end

  # puts "\n== Copying sample files =="
  # unless File.exist?("config/database.yml")
  #   FileUtils.cp "config/database.yml.sample", "config/database.yml"
  # end

  puts "\n== Preparing database =="
  system! "bin/rails db:prepare"

  puts "\n== Removing old logs and tempfiles =="
  system! "bin/rails log:clear tmp:clear"

  puts "\n== Restarting application server =="
  system! "bin/rails restart"
end
