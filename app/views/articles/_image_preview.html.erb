<div id="article-image-area-<%= article.id %>" class="article-image-area">
  <% if article.image.attached? %>
    <%= image_tag url_for(article.image.variant(resize_to_limit: [160, 120])), class: 'article-thumb', data: { file_preview_target: 'image' }, alt: (article.title.presence || 'Article image') %>
    <button type="button" class="remove-image-btn btn btn-sm btn-danger" aria-label="Remove image"
            data-action="click->file-preview#removeImage"
            data-remove-url="<%= remove_image_article_path(article) %>"
            data-confirm="Are you sure you want to remove the image?">âœ•</button>
  <% else %>
    <%= image_tag '', class: 'article-thumb d-none', data: { file_preview_target: 'image' }, alt: 'preview' %>
  <% end %>
</div>
