<div class="row">
  <div class="col-sm-6 d-flex justify-content-between align-items-center mx-auto mb-3">
    <h1 class="article-feed-header">Latest Articles</h1>

    <% if admin? %>
      <%= link_to new_article_path, class: 'btn btn-primary' do %>
        Add New Article
      <% end %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-6 mx-auto">
    <% @articles.each do |post| %>
      <%= render partial: "article", locals: { article: post } %>
    <% end %>
  </div>
</div>
